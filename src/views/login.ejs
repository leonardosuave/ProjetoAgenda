<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3"> <!--Aqui vem os conteúdos-->
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

      <%- include('includes/messages') %> <!--Para incluir as mensagens de erros do include-->

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Para criar conta, preencha o formulário abaixo.</p>

          <form class="form-registrar" action="/login/register" method="POST"> <!--Rota para receber os dados do formulário-->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <!--Config de cadastro-->
            <div class="form-group"> 
              <label>Seu email</label>
              <input type="email" class="form-control emailRegister form-registrar" name="email">
            </div>
            <div class="form-group"> 
              <label>Nome</label>
              <input type="text" class="form-control nomeRegister form-registrar" name="nome">
            </div>
            <div class="form-group"> 
              <label>Sobrenome</label>
              <input type="text" class="form-control sobrenomeRegister form-registrar" name="sobrenome">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control senhaRegister form-registrar" name="password">
            </div>
            <button type="submit" class="btn btn-primary btn-register">Criar minha conta</button>
          </form>

        </div>

        <div class="col-lg">
          <h4>Faça seu login</h4>
          <p>Se você ja tem uma conta, faça o login abaixo.</p>
          
          <form class="form-login" action="/login/login" method="POST"> <!--Rota para receber os dados do formulário-->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group"> <!--Config de cadastro-->
              <label>Seu email</label>
              <input type="email" class="form-control form-login emailLogin" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control form-login senhaLogin" name="password">
            </div>
            <button type="submit" class="btn btn-primary btn-login">Entrar</button>
          </form>
        </div>

      </div>

    </div>
  
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>

   